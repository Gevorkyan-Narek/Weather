<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bg_color</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/bg_color</item>
    </style>

    <style name="Theme.Weather.TextView">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Theme.Weather.TextView.H1">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Theme.Weather.TextView.H1.Bold">
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="Theme.Weather.TextView.H2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="Theme.Weather.TextView.NormalText">
        <item name="android:textSize">16sp</item>
    </style>

</resources>