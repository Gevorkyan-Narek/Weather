<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startScreen">

    <fragment
        android:id="@+id/startScreen"
        android:name="com.weather.startscreen.StartScreenFragment"
        tools:layout="@layout/f_start_screen">

        <action
            android:id="@+id/fromStartToWeatherScreen"
            app:destination="@id/weatherScreen"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/weatherScreen"
        android:name="com.weather.main.screen.MainScreenFragment"
        tools:layout="@layout/main_screen" />

</navigation>